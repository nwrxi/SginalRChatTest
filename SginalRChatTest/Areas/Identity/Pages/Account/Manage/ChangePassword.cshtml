@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="card my-3">
    <div class="card-body">
        <h5 class="card-title text-center">@ViewData["Title"]</h5>
        <partial name="_StatusMessage" for="StatusMessage" />
        <section>
            <div class="row align-items-center p-3">
                <div class="col-md-6">
                    <form class="form-signin" id="change-password-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-label-group">
                            <input asp-for="Input.OldPassword" class="form-control" placeholder="Old password" required autofocus />
                            <label asp-for="Input.OldPassword"></label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-label-group">
                            <input asp-for="Input.NewPassword" class="form-control" placeholder="New password" required />
                            <label asp-for="Input.NewPassword"></label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-label-group">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="New password" required />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <p>
                                <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase button-signin">Update password</button>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
